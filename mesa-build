#!/bin/bash
source "$(cd "$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")" && pwd)"/menv

if [ -f "$MESA_BUILD_DIR/build.ninja" ]; then
    ninja -C "$MESA_BUILD_DIR" && \
        ninja -C "$MESA_BUILD_DIR" install
    NRESULT=$?
else
    cd "$MESA_BUILD_DIR" && \
        PATH=/usr/lib/ccache:$PATH make -j8 $*
    NRESULT=$?
fi


echo "Built $MESA_DIR => $NRESULT"

exit $NRESULT
